<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OTP Verification</title>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(120deg, #e0f2fe, #ffffff);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .card {
      background: #fff;
      padding: 30px 25px;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 400px;
      text-align: center;
    }

    h2 {
      margin-bottom: 12px;
      color: #1e3a8a;
    }

   
form input[type="email"] {
  width: 80%;        
  max-width: 300px;     
  margin: 12px auto;   
  display: block;       
  padding: 12px 15px;
  font-size: 16px;
  border: 1px solid #cbd5e1;
  border-radius: 8px;
  text-align: center;
  transition: border 0.2s, box-shadow 0.2s;
}

form input[type="email"]:focus {
  border-color: #2563eb;
  box-shadow: 0 0 8px rgba(37, 99, 235, 0.3);
  outline: none;
}

    .otp-inputs {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .otp-inputs input {
      width: 60px;
      height: 60px;
      font-size: 24px;
      text-align: center;
      border: 1px solid #cbd5e1;
      border-radius: 8px;
    }

    button {
      width: 100%;
      padding: 12px;
      background: #2563eb;
      color: #fff;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s;
    }

    button:hover {
      background: #1e40af;
    }

    .popup {
      margin-top: 15px;
      padding: 12px;
      border-radius: 8px;
      font-size: 14px;
      text-align: center;
    }

    .success {
      background: #dcfce7;
      color: #166534;
      border: 1px solid #22c55e;
    }

    .error {
      background: #fee2e2;
      color: #b91c1c;
      border: 1px solid #ef4444;
    }

    @media (max-width: 480px) {
      .card { margin: 0 15px; padding: 20px 15px; }
      .otp-inputs input { width: 50px; height: 50px; font-size: 20px; }
    }
  </style>
</head>
<body>
  <div class="card">
    <h2>OTP Verification</h2>

    <!-- ---------------- Email Entry ---------------- -->
    <% if (!email) { %>
      <form method="POST" action="/auth/otp">
        <input type="email" name="email" placeholder="Enter your email" required />
        <button type="submit">Send OTP</button>
      </form>
    <% } %>

    <!-- ---------------- OTP Entry ---------------- -->
    <% if (email) { %>
      <p>OTP sent to <strong><%= email %></strong></p>
      <form method="POST" action="/auth/verify-otp" id="otpForm">
        <div class="otp-inputs">
          <input type="text" maxlength="1" name="otp1" required />
          <input type="text" maxlength="1" name="otp2" required />
          <input type="text" maxlength="1" name="otp3" required />
          <input type="text" maxlength="1" name="otp4" required />
        </div>
        <button type="submit">Verify OTP</button>
      </form>
    <% } %>

    <!-- Success / Error Messages -->
    <% if (message) { %>
      <div class="popup success"><%= message %></div>
    <% } %>
    <% if (error) { %>
      <div class="popup error"><%= error %></div>
    <% } %>
  </div>

  <script>
    // Auto-hide popups
    setTimeout(() => {
      document.querySelectorAll('.popup').forEach(p => p.style.display = 'none');
    }, 4000);

    // Auto-focus between OTP inputs
    const inputs = document.querySelectorAll('.otp-inputs input');
    if (inputs.length) {
      inputs.forEach((input, index) => {
        input.addEventListener('input', () => {
          if (input.value.length === 1 && index < inputs.length - 1) {
            inputs[index + 1].focus();
          }
        });
        input.addEventListener('keydown', (e) => {
          if (e.key === 'Backspace' && input.value === '' && index > 0) {
            inputs[index - 1].focus();
          }
        });
      });
    }
  </script>
</body>
</html>
