<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>OTP Verification</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(120deg, #e0f2fe, #ffffff);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .card {
      background: #fff;
      padding: 30px 25px;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 400px;
      text-align: center;
    }

    h2 {
      margin-bottom: 12px;
      color: #1e3a8a;
    }

    /* ---------------- Email Input ---------------- */
    form input[type="email"] {
      width: 80%;
      max-width: 300px;
      margin: 12px auto;
      display: block;
      padding: 12px 15px;
      font-size: 16px;
      border: 1px solid #cbd5e1;
      border-radius: 8px;
      text-align: center;
      transition: 0.2s;
    }

    form input[type="email"]:focus {
      border-color: #2563eb;
      box-shadow: 0 0 8px rgba(37,99,235,0.3);
      outline: none;
    }

    /* ---------------- OTP Inputs ---------------- */
    .otp-inputs {
      display: flex;
      justify-content: center;
      gap: 12px;
      margin: 20px 0;
    }

    .otp-inputs input {
      width: 200px;
      height: 55px;
      font-size: 22px;
      font-weight: bold;
      text-align: center;
      border: 2px solid #cbd5e1;
      border-radius: 10px;
      outline: none;
      transition: all 0.2s ease;
    }

    .otp-inputs input:focus {
      border-color: #2563eb;
      box-shadow: 0 0 6px rgba(37,99,235,0.4);
    }

    /* ---------------- Button ---------------- */
    button {
      width: 80%;
      padding: 12px;
      margin-top: 15px;
      background: #2563eb;
      color: #fff;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s;
    }

    button:hover {
      background: #1e40af;
    }

    /* ---------------- Messages ---------------- */
    .popup {
      margin-top: 15px;
      padding: 12px;
      border-radius: 8px;
      font-size: 14px;
    }

    .success {
      background: #dcfce7;
      color: #166534;
      border: 1px solid #22c55e;
    }

    .error {
      background: #fee2e2;
      color: #b91c1c;
      border: 1px solid #ef4444;
    }

    /* ---------------- Mobile ---------------- */
    @media (max-width: 480px) {
      .otp-inputs input {
        width: 48px;
        height: 48px;
        font-size: 20px;
      }
    }
  </style>
</head>

<body>
<div class="card">
  <h2>OTP Verification</h2>

  <!-- ================= EMAIL FORM ================= -->
  <% if (!email) { %>
    <form method="POST" action="/otp/send">
      <input
        type="email"
        name="email"
        placeholder="Enter your email"
        required
        pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$"
        title="Enter a valid email address"
      />
      <button type="submit">Send OTP</button>
    </form>
  <% } %>

  <!-- ================= OTP FORM ================= -->
  <% if (email) { %>
    <p>OTP sent to <strong><%= email %></strong></p>

    <form method="POST" action="/otp/verify">
      <input type="hidden" name="email" value="<%= email %>"/>

      <div class="otp-inputs">
        <input name="otp" maxlength="4" placeholder="____" required />
      </div>

      <button type="submit">Verify OTP</button>
    </form>

    <!-- ================= RESEND ================= -->
    <div class="resend">
      <form method="POST" action="/otp/resend">
        <input type="hidden" name="email" value="<%= email %>" />
        <button type="submit" id="resendBtn" disabled>Resend OTP</button>
        <br>
        <span id="timer"> (60s)</span>
      </form>
    </div>
  <% } %>

  <!-- ================= MESSAGES ================= -->
  <% if (message) { %>
    <div class="popup success"><%= message %></div>
  <% } %>

  <% if (error) { %>
    <div class="popup error"><%= error %></div>
  <% } %>
</div>

<script>
  // Auto-hide messages
  setTimeout(() => {
    document.querySelectorAll('.popup').forEach(p => p.remove());
  }, 4000);

  // Resend timer
  const resendBtn = document.getElementById("resendBtn");
  const timerEl = document.getElementById("timer");

  if (resendBtn && timerEl) {
    let time = 60;
    const interval = setInterval(() => {
      time--;
      timerEl.textContent = ` (${time}s)`;
      if (time <= 0) {
        clearInterval(interval);
        resendBtn.disabled = false;
        timerEl.textContent = "";
      }
    }, 1000);
  }
</script>
</body>
</html>
