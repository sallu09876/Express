<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Mono Font -->
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;600&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        background: #05080f;
        font-family: "JetBrains Mono", monospace;
        color: #00ffcc;
      }

      .terminal-box {
        border: 2px solid #00ffcc;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 0 20px rgba(0, 255, 204, 0.25);
      }

      .terminal-title {
        text-align: center;
        font-weight: 600;
        letter-spacing: 2px;
        margin-bottom: 20px;
      }

      .terminal-title::before {
        content: "> ";
      }

      .search-input {
        background: transparent;
        border: 1px solid #00ffcc;
        color: #00ffcc;
        border-radius: 0;
      }

      .search-input::placeholder {
        color: #00ffcc99;
      }

      .search-input:focus {
        background: transparent;
        box-shadow: 0 0 8px #00ffcc;
        border-color: #00ffcc;
        color: #00ffcc;
      }

      .btn-neon {
        border: 1px solid #00ffcc;
        color: #00ffcc;
        background: transparent;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .btn-neon:hover {
        background: #00ffcc;
        color: #000;
        box-shadow: 0 0 12px #00ffcc;
      }

      table {
        color: #00ffcc;
      }

      thead {
        border-bottom: 2px solid #00ffcc;
      }

      tbody tr {
        transition: background 0.2s;
      }

      tbody tr:hover {
        background: rgba(0, 255, 204, 0.08);
      }

      td,
      th {
        border-color: #00ffcc33 !important;
      }

      .action-btn {
        font-size: 12px;
        padding: 4px 10px;
      }
    </style>
  </head>

  <body>
    <div class="container py-5">
      <div class="terminal-box">
        <h3 class="terminal-title">Student Database</h3>

        <!-- Controls -->
        <div class="d-flex flex-column flex-md-row gap-3 mb-4">
          <form
            action="/add-user/search"
            method="GET"
            class="d-flex flex-grow-1 gap-2"
          >
            <input
              type="text"
              name="search_text"
              class="form-control search-input"
              placeholder="> search student"
            />
            <button class="btn btn-neon">Search</button>
          </form>

          <a href="/add-user" class="btn btn-neon">
            + Add
          </a>
        </div>

        <!-- Table -->
        <div class="table-responsive">
          <table class="table table-borderless align-middle">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
                <th class="text-center">Cmd</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach(function(student) { %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.email %></td>
                <td><%= student.age %></td>
                <td class="text-center">
                  <a
                    href="/add-user/edit/<%= student.id %>"
                    class="btn btn-neon action-btn me-1"
                  >
                    edit
                  </a>
                  <form
                    action="/add-user/delete/<%= student.id %>"
                    method="POST"
                    class="d-inline"
                  >
                    <button
                      class="btn btn-neon action-btn"
                      onclick="return confirm('Confirm delete?')"
                    >
                      del
                    </button>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
